<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:layout_marginBottom="@dimen/settings_margin_bottom">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/settings_margin_right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="@style/SettingsMainTextStyle"
            android:text="@string/father_main" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="@style/SettingsSubTextStyle"
            android:text="@string/father_sub" />
    </LinearLayout>

    <Switch
        android:id="@+id/father_filter_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"/>
</LinearLayout>
